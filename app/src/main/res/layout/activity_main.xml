<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/main_title_vi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_tab_vi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_weight="0.9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#F3F2F1"
        />

    <ImageView
        android:id="@+id/user_profile_img"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/user_profile"
        android:layout_marginVertical="6dp"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="@id/main_title_vi"
        app:layout_constraintBottom_toBottomOf="@id/main_title_vi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/user_name_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="130dp"
        />
    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="혜원"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/user_profile_img"
        app:layout_constraintTop_toTopOf="@+id/main_title_vi"
        app:layout_constraintBottom_toBottomOf="@+id/main_title_vi"
        />
    <TextView
        android:id="@+id/top_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="의 서재"
        app:layout_constraintLeft_toRightOf="@+id/user_name_tv"
        app:layout_constraintTop_toTopOf="@+id/main_title_vi"
        app:layout_constraintBottom_toBottomOf="@+id/main_title_vi"
        />

    <ImageView
        android:id="@+id/top_menu"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/top_menu"
        android:layout_marginVertical="5dp"
        android:layout_marginRight="20dp"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="@id/main_title_vi"
        app:layout_constraintBottom_toBottomOf="@id/main_title_vi"
        app:layout_constraintRight_toRightOf="@+id/main_title_vi"
        />

    <View
        android:id="@+id/main_tab_vi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/main_title_vi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_list_sv"
        app:layout_constraintVertical_weight="0.9"
        />



    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/main_tab_vi"
        app:layout_constraintBottom_toTopOf="@+id/main_list_fl"
        app:layout_constraintEnd_toEndOf="@+id/main_tab_vi"
        app:layout_constraintStart_toStartOf="@+id/main_tab_vi"
        app:tabTextColor="@color/black"
        app:tabIndicatorColor="@color/black"
        app:tabMode="fixed"
        app:tabGravity="center"
        android:layout_marginHorizontal="20dp"
        app:tabIndicatorHeight="2dp"
        app:tabTextAppearance="@style/tab_text"
        android:textSize="12sp"
        >
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체도서"

            />
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="책장"
            />
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="독서노트"
            />
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="통계"
            />


    </com.google.android.material.tabs.TabLayout>

    <FrameLayout
        android:id="@+id/main_list_fl"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@+id/main_tab_vi"
        app:layout_constraintBottom_toTopOf="@+id/bnv_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

    </FrameLayout>
    <ScrollView
        android:id="@+id/main_list_sv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/main_list_fl"
        app:layout_constraintVertical_weight="10">
    </ScrollView>



    <LinearLayout
        android:id="@+id/main_list_cl1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/main_list_sv"
        app:layout_constraintBottom_toBottomOf="@+id/main_list_fl"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@+id/main_list_cl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/book2"
            android:layout_marginRight="10dp"

            >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/book1"
            android:adjustViewBounds="true"
            android:layout_marginBottom="4dp"
            android:padding="2dp"
            android:elevation="10dp"
            android:background="#E4E3E3"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="모순"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="양귀자"

            android:layout_marginLeft="3dp"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@+id/main_list_cl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/book2"
            android:layout_marginRight="10dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/book1"
                android:adjustViewBounds="true"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="모순"
                android:textStyle="bold"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="양귀자"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@+id/main_list_cl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/book2"
            android:layout_marginRight="10dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/book1"
                android:adjustViewBounds="true"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="모순"
                android:textStyle="bold"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="양귀자"
                />
        </LinearLayout>

        </LinearLayout>







    <FrameLayout
        android:id="@+id/main_fl_page"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bnv_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="9" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnv_main"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_menu"
        app:itemIconTint="@drawable/menu_selector"
        app:itemTextColor="@drawable/menu_selector"
        android:paddingHorizontal="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>